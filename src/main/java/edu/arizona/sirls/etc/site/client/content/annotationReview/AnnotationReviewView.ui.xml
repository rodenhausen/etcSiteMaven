<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:my="urn:import:edu.arizona.sirls.etc.site.client.content.annotationReview">
    <ui:style>     
		.verticalPanel {
			width: 900px;
		}   
        .westPanel {
			padding: 20px;
        }
		.northPanel {
			width:900px;
			margin-left: auto;
			margin-right: auto;
		}
        .centerPanel {
            width:100%;
			padding: 20px;
        }
    </ui:style>
    <g:HTMLPanel >
    <div class='content900pxCentered'>
    <g:VerticalPanel styleName='{style.verticalPanel}'>
        <g:cell>
         <g:Label styleName="siteHeading">
             Markup Review
         </g:Label>   
        </g:cell>
    	<g:cell>
    	 <g:DockLayoutPanel unit='PX' height='1000'>
	       <g:north size='194' styleName="{style.northPanel}">
	       	   <my:ISearchView ui:field="search"></my:ISearchView>
	       </g:north>
	       <g:west size='200' styleName="{style.westPanel}">
	           <my:IResultView ui:field="result"></my:IResultView>
	       </g:west>
	       <g:center styleName="{style.centerPanel}">
	           <my:IXMLEditorView ui:field="xmlEditor"></my:IXMLEditorView>
	       </g:center>      
	     </g:DockLayoutPanel>
    	</g:cell>
     </g:VerticalPanel>
     </div>
     </g:HTMLPanel>
</ui:UiBinder> 